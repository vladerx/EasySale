<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/updatebg"
    android:gravity="center_horizontal|top"
    android:orientation="vertical"
    tools:context=".UpdateUserFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/updateImageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        app:civ_border_color="#FFddddf0"
        app:civ_border_width="3dp" />

    <TextView
        android:id="@+id/uploadTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/unlock"
        android:gravity="center"
        android:text="Upload Image"
        android:textColor="#ddddf0"
        android:textColorHighlight="#ddddf0"
        android:textColorHint="#ddddf0"
        android:textColorLink="#ddddf0"
        android:textSize="18sp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/updateFNEditText"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rect_white_bg"
        android:backgroundTint="#86FFFFFF"
        android:ems="10"
        android:fontFamily="@font/unlock"
        android:hint="First Name:"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#ddddf0"
        android:textColorHighlight="#ddddf0"
        android:textColorHint="#ddddf0"
        android:textColorLink="#ddddf0"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/updateLNEditText"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rect_white_bg"
        android:backgroundTint="#86FFFFFF"
        android:ems="10"
        android:fontFamily="@font/unlock"
        android:hint="Last Name:"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#ddddf0"
        android:textColorHighlight="#ddddf0"
        android:textColorHint="#ddddf0"
        android:textColorLink="#ddddf0"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateFNEditText" />

    <EditText
        android:id="@+id/updateEmailEditText"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rect_white_bg"
        android:backgroundTint="#86FFFFFF"
        android:ems="10"
        android:fontFamily="@font/unlock"
        android:hint="Email:"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="#ddddf0"
        android:textColorHighlight="#ddddf0"
        android:textColorHint="#ddddf0"
        android:textColorLink="#ddddf0"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateLNEditText" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="137dp"
        android:layout_height="72dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#6500DE"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/unlock"
        android:gravity="center"
        android:text="Update"
        android:textColor="#ddddf0"
        android:textColorHighlight="#ddddf0"
        android:textColorHint="#ddddf0"
        android:textColorLink="#ddddf0"
        android:textSize="20sp"
        android:visibility="invisible"
        app:cornerRadius="50dp"
        app:iconTint="#ddddf0"
        app:layout_constraintBottom_toTopOf="@+id/updateUserProgressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateEmailEditText"
        app:layout_constraintVertical_bias="0.0"
        app:strokeColor="#ddddf0"
        app:strokeWidth="4dp" />

    <ProgressBar
        android:id="@+id/updateUserProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:indeterminate="true"
        android:indeterminateTint="#121260"
        android:indeterminateTintMode="src_atop"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>